@using EAgenda.WebApp.Models;
@model VisualizarItensTarefaViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Itens da tarefa";
}

<p>
    <a class="btn btn-primary px-4" href="/ItensTarefa/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo
    </a>
</p>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-3">
            <div class="card border-0">
                <div class="card-body">
                    <h5 class="card-title">Titulo: @item.Titulo</h5>
                    <p class="card-text"><span class="fw-semibold">Status:</span> @item.Status</p>

                    <span class="d-flex gap-1 justify-content-end mt-4">
                        <form asp-action="AlternarStatus" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-secondary rounded-circle opcao-card" title="=Alternar status">
                                <i class="bi bi-check-circle-fill"></i>
                            </button>
                        </form>
                        <a href="/ItensTarefa/excluir/@item.Id" class="btn btn-danger rounded-circle opcao-card">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>
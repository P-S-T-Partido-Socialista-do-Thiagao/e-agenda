@using eAgenda.WebApp.Models
@model DetalhesDespesaViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Detalhes da Despesa";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">

        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Detalhes</h3>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Id" class="control-label fs-5">Id:</label>
                    <input name="Id" class="form-control" value="@Model.Id" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Descricao" class="control-label fs-5">Descrição:</label>
                    <input name="Descricao" class="form-control" value="@Model.Descricao" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="DataOcorrencia" class="control-label fs-5">Data da ocorrência:</label>
                    <input name="DataOcorrencia" class="form-control" value="@Model.DataOcorrencia" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Valor" class="control-label fs-5">Valor:</label>
                    <input name="Valor" class="form-control" value="@Model.Valor" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="FormaPagamento" class="control-label fs-5">Forma de pagamento:</label>
                    <input name="FormaPagamento" class="form-control" value="@Model.FormaPagamento" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Categorias" class="control-label fs-5">Categorias:</label>
                    <ul class="list-group>
                        @foreach (var categoria in Model.Categorias)
                        {
                            <li class="list-group-item">@categoria.</li>
                        }
                    </ul>
                </div>

                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                    <a href="/despesas">Voltar para a listagem</a>
                </div>
            </div>
        </div>


    </div>
</div>
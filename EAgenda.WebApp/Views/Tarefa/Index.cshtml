@using EAgenda.WebApp.Models;
@model VisualizarTarefaViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Tarefas";
}

<p>
    <a class="btn btn-primary px-4" href="/tarefas/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo
    </a>
</p>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Tarefa: @item.Titulo</h5>
                    <p class="card-text"><span class="fw-semibold">Prioridade:</span> @item.Prioridade</p>

                    <div class="mt-auto">
                        <div class="d-flex align-items-center mb-2">
                            <span class="me-2 small">@item.PercentualConcluido%</span>
                            <div class="progress" style="height: 10px; width: 100%;">
                                <div class="progress-bar"
                                     role="progressbar"
                                     style="width: @item.PercentualConcluido%;"
                                     aria-valuenow="@item.PercentualConcluido"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                        <span class="d-flex gap-1 justify-content-end mt-2">
                            <a href="/tarefas/detalhes/@item.Id" class="btn btn-secondary rounded-circle opcao-card" title="Detalhes">
                                <i class="bi bi-search"></i>
                            </a>
                            <a href="/ItensTarefa/PorTarefa/@item.Id" class="btn btn-info rounded-circle opcao-card text-white" title="Adicionar Itens">
                                <i class="bi bi-list-check"></i>
                            </a>
                            <a href="/tarefas/editar/@item.Id" class="btn btn-primary rounded-circle opcao-card" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="/tarefas/excluir/@item.Id" class="btn btn-danger rounded-circle opcao-card" title="Excluir">
                                <i class="bi bi-trash"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

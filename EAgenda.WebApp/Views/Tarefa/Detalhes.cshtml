@model DetalhesTarefaViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Detalhes da Tarefa";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">

        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Detalhes</h3>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Id" class="control-label fs-5">Id:</label>
                    <input name="Id" class="form-control" value="@Model.Id" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Titulo" class="control-label fs-5">Título:</label>
                    <input name="Titulo" class="form-control" value="@Model.Titulo" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Prioridade" class="control-label fs-5">Prioridade:</label>
                    <input name="Prioridade" class="form-control" value="@Model.Prioridade" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="DataCriacao" class="control-label fs-5">Data de criação:</label>
                    <input name="DataCriacao" class="form-control" value="@Model.DataCriacao" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label for="DataConclusao" class="control-label fs-5">Data de conclusão:</label>
                    <input name="DataConclusao" class="form-control" value="@Model.DataConclusao" readonly disabled />
                </div>
                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                    <a href="/tarefas" class="btn btn-outline-secondary">Voltar para a listagem</a>
                    <a href="/ItensTarefa" class="btn btn-primary">Adicionar Item</a>
                </div>
            </div>
        </div>


    </div>
</div>
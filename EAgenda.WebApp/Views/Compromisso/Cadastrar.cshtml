@using EAgenda.WebApp.Models;
@model CadastrarCompromissoViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de Compromisso";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <h2 class="card-title text-center mb-4">COMPROMISSOS</h2>

                    @if (ViewData.ModelState["CadastroUnico"]?.Errors.Count > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                            @ViewData.ModelState["CadastroUnico"]!.Errors.First().ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-controller="Compromisso" asp-action="Cadastrar" method="post">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Assunto" class="form-label">Assunto *</label>
                                    <input asp-for="Assunto" class="form-control" />
                                    <span asp-validation-for="Assunto" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DataDeOcorrencia" class="form-label">DataDeOcorrencia *</label>
                                    <input asp-for="DataDeOcorrencia" type="date" class="form-control" />
                                    <span asp-validation-for="DataDeOcorrencia" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="HoraDeInicio" class="form-label">HoraDeInicio: *</label>
                                    <input asp-for="HoraDeInicio" class="form-control" />
                                    <span asp-validation-for="HoraDeInicio" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="HoraDeTermino" class="form-label">HoraDeTermino: *</label>
                                    <input asp-for="HoraDeTermino" class="form-control" />
                                    <span asp-validation-for="HoraDeTermino" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        <div class="mb-3">
                            <label asp-for="TipoCompromisso" class="form-label">TipoCompromisso: *</label>
                            <select class="form-select" asp-for="TipoCompromisso" aria-label="Selecionar tipo compromisso">
                                <option selected></option>
                                <option value="Remoto">Remoto</option>
                                <option value="Presencial">Presencial</option>
                            </select>
                            <span asp-validation-for="TipoCompromisso" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Local" class="form-label">Local:</label>
                            <input asp-for="Local" class="form-control" />
                            <span asp-validation-for="Local" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Link" class="form-label">Link:</label>
                            <input asp-for="Link" class="form-control" />
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Contato" class="form-label">Contato:</label>
                            <select class="form-select" asp-for="Contato" asp-items="Model.ContatosDisponiveis" aria-label="Selecionar contato">
                            </select>
                        </div>

                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <a href="/compromissos" class="btn btn-outline-secondary">Visualizar</a>
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}